<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PublisherExample.ctrlPublisher">
    
    <VerticalStackLayout Spacing="10" Margin="10">

        <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
            <Label Text="Article Title : " VerticalOptions="Center"/>
            <Entry x:Name="txt_Title" Grid.Column="1"/>
            
            <Label Text="Article Content : " VerticalOptions="Center" Grid.Row="1"/>
            <Entry x:Name="txt_Content" Grid.Column="1" Grid.Row="1"/>
        </Grid>

        <Button Text="Publish" x:Name="btn_Publish" Clicked="btn_Publish_Clicked"/>
    </VerticalStackLayout>
</ContentView>
