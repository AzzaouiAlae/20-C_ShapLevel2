<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParallelInvoke.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button Text="Start" HorizontalOptions="Center" x:Name="btn_Start" Clicked="btn_Start_Clicked"/>
            <Label HorizontalOptions="Center" FontSize="20" x:Name="lbl1"/>
            <Label HorizontalOptions="Center" FontSize="20" x:Name="lbl2"/>
            <Label HorizontalOptions="Center" FontSize="20" x:Name="lbl3"/>
            <Label HorizontalOptions="Center" FontSize="20" x:Name="lbl4"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
