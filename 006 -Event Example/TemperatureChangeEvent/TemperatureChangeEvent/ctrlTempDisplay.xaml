<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemperatureChangeEvent.ctrlTempDisplay"
             >

    <Frame CornerRadius="20" Margin="20" HorizontalOptions="Start">
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Label Text="Temperature Change" Margin="0,0,0,5" Grid.ColumnSpan="2" HorizontalOptions="Center"/>

            <Label Text="From : " Grid.Row="1" HorizontalOptions="End"/>
            <Label  x:Name="lbl_From" Grid.Row="1" Grid.Column="1"/>

            <Label Text="To : " Grid.Row="2" HorizontalOptions="End"/>
            <Label x:Name="lbl_To" Grid.Row="2" Grid.Column="1"/>

            <Label Text="Differance : " Grid.Row="3" HorizontalOptions="End"/>
            <Label x:Name="lbl_Differance" Grid.Row="3" Grid.Column="1"/>
        </Grid>
    </Frame>
</ContentView>
