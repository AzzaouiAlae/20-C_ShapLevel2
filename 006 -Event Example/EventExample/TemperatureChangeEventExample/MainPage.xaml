<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemperatureChangeEventExample.MainPage"
             xmlns:local="clr-namespace:TemperatureChangeEventExample"
             Loaded="ContentPage_Loaded">

    
    <VerticalStackLayout Padding="15,0" Spacing="7">

        <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
            <Label Text="Temperature :" VerticalOptions="Center"/>
            <Entry x:Name="txt_Temperature"/>
        </HorizontalStackLayout>
        <Button Text="Set Temperature" x:Name="btn_Ok" Clicked="btn_Ok_Clicked"/>
        <local:ctrlDisplay x:Name="cDisplay"/>
        <local:ctrlAirConditioner x:Name="airConditioner" HorizontalOptions="Center"/>
    </VerticalStackLayout>


</ContentPage>
