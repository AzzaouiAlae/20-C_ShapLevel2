<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParallelFor.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25"
            x:Name="vsl">

            <Button Text="Start" HorizontalOptions="Center" Clicked="Button_Clicked"/>
            
            <Label HorizontalOptions="Center" x:Name="lbl" FontSize="20" FontAttributes="Bold"/>
            <Label HorizontalOptions="Center" x:Name="lbl2" FontSize="20" FontAttributes="Bold"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
