<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Logger.SetLogPage"
             Title="SetLogPage">
    
    <VerticalStackLayout Padding="15" Spacing="7"> 
        
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="7">
            <Label  Text="Log : "/>
            <Entry Grid.Column="1" x:Name="txt_SetLog"/>
        </Grid>
        
        <Button Text="Set Logger" x:Name="btn_Logger" Clicked="btn_Logger_Clicked"/>
        <Label x:Name="lbl_Log" FontSize="20" HorizontalOptions="Center"/>

    </VerticalStackLayout>
    
</ContentPage>