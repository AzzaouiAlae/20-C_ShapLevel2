<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JsonSerialization.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25">

            <Grid RowDefinitions="*,*" ColumnDefinitions="Auto,*" ColumnSpacing="20" RowSpacing="20">
                <Label Text="Name : " VerticalOptions="Center"/>
                <Entry x:Name="txt_Name" Grid.Column="1" HorizontalTextAlignment="Center"/>

                <Label Text="Age : " VerticalOptions="Center" Grid.Row="1"/>
                <Entry x:Name="txt_Age" Grid.Column="1" Grid.Row="1" HorizontalTextAlignment="Center"/>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
