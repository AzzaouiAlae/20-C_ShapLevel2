<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFactoryClass.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="15">

            <Button Text="Start" x:Name="Btn_Start" Clicked="Btn_Start_Clicked" HorizontalOptions="Center"/>
            <Button Text="Pause" x:Name="Btn_Pause" Clicked="Btn_Pause_Clicked" HorizontalOptions="Center"/>
            <Button Text="Stop" x:Name="Btn_Stop" Clicked="Btn_Stop_Clicked" HorizontalOptions="Center"/>

            <Label x:Name="lbl1" HorizontalOptions="Center" FontSize="20" Text="lbl1"/>
            <Label x:Name="lbl2" HorizontalOptions="Center" FontSize="20"/>
            <Label x:Name="lbl3" HorizontalOptions="Center" FontSize="20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
