<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SstringBuilderr.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">

                <Label Text="Normal String :"/>
                <Entry Grid.Column="1" x:Name="txt_NormalString"/>

                <Label Text="String Bilder : " Grid.Row="1"/>
                <Entry Grid.Column="1" Grid.Row="1" x:Name="txt_StringBilder"/>
            </Grid>
            <Button Text="Start Test" Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
