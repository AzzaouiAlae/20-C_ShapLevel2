<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HashingExample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25">

            <Label Text="SinIn" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold"/>
            <Grid RowDefinitions="*,*,*" ColumnDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="10">
                <Label Text="Username :" VerticalOptions="Center"/>
                <Entry Grid.Column="1" x:Name="txt_Username" />

                <Label Text="Password :" VerticalOptions="Center" Grid.Row="1"/>
                <Entry Grid.Column="1" x:Name="txt_Password" Grid.Row="1"/>

                <Label Text="Email :" VerticalOptions="Center" Grid.Row="2"/>
                <Entry Grid.Column="1" x:Name="txt_Email" Grid.Row="2"/>
            </Grid>            
            
            <Button Text="SinIn" Clicked="Button_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
