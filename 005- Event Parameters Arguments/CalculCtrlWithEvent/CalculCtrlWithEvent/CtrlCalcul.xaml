<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculCtrlWithEvent.CtrlCalcul">
    
    <Frame CornerRadius="20" Margin="10">
        
        <VerticalStackLayout  Spacing="5">

            <Label Text="Calculator" HorizontalOptions="Center" Margin="0,0,0,5" />
            <Entry x:Name="Txt1" HorizontalTextAlignment="Center"/>
            <Label Text="+" HorizontalOptions="Center" FontSize="40" />
            <Entry x:Name="Txt2" HorizontalTextAlignment="Center"/>
            
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Result : " HorizontalOptions="Center" FontSize="20"/>
                <Label Text="0" FontSize="20" x:Name="lbl_Result"/>
            </HorizontalStackLayout>

            <Button x:Name="btn_Calcul" Clicked="Btn_Calcul_Clicked" Text="Calculate"/>

        </VerticalStackLayout>
        
    </Frame>    
    
</ContentView>
