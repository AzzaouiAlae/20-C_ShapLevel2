<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SendDataBak.SelectPersonPage"
             Title="SelectPersonPage">
    <VerticalStackLayout>

        <Entry Placeholder="Enter Person ID" TextChanged="Entry_TextChanged" x:Name="txt"/>
        <HorizontalStackLayout>
            <Button Text="OK" x:Name="btnOk" Clicked="btnOk_Clicked"/>
            <Button Text="Cancel" x:Name="btnCancel" Clicked="btnCancel_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>