<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SendDataBack.MainPage">

    
    <VerticalStackLayout
        Padding="20"
        Spacing="10">

        <Button Text="Select Person" x:Name="btnSelectPerson" Clicked="btnSelectPerson_Clicked"/>
        
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Label Text="Selected Person ID : " FontSize="15" VerticalOptions="Center"/>
            <Entry x:Name="txt" FontSize="15"/>
        </HorizontalStackLayout>
        

    </VerticalStackLayout>
    

</ContentPage>
