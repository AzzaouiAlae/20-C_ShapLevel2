<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SendDataBack.SelectPersonPage"
             Title="Select Person Page">
    
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Enter Person ID" x:Name="txt"/>

        <HorizontalStackLayout Padding="20" Spacing="30" HorizontalOptions="Center">
            <Button Text="Ok" x:Name="btnOk" Clicked="btnOk_Clicked" VerticalOptions="Center"/>
            <Button Text="Cancele" x:Name="btnCancele" Clicked="btnCancele_Clicked" VerticalOptions="Center"/>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>